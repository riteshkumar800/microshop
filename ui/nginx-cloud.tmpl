server {
  listen 80;              # <-- use a fixed port, not $PORT
  server_name _;

  root /usr/share/nginx/html;
  index index.html;

  # health
  location = /healthz {
    add_header Content-Type application/json;
    return 200 '{"ok":true}';
  }

  # Single-page app fallback
  location / { try_files $uri /index.html; }

  # Common proxy bits (HTTP/2 friendly; SNI for Renderâ€™s HTTPS upstreams)
  proxy_http_version 1.1;
  proxy_set_header Connection "";
  proxy_set_header X-Forwarded-Proto $scheme;
  proxy_set_header X-Forwarded-For $remote_addr;
  proxy_ssl_server_name on;
  proxy_set_header Host $proxy_host;

  # Products
  location /api/products/ { proxy_pass ${PRODUCT_ORIGIN}/products/; }
  location = /api/products { proxy_pass ${PRODUCT_ORIGIN}/products; }

  # Auth (user-service)
  location /api/auth/ { proxy_pass ${USER_ORIGIN}/auth/; }
  location = /api/auth { proxy_pass ${USER_ORIGIN}/auth; }

  # Orders
  location /api/orders/ { proxy_pass ${ORDER_ORIGIN}/orders/; }
  location = /api/orders { proxy_pass ${ORDER_ORIGIN}/orders; }

  # Payments
  location /api/pay/ { proxy_pass ${PAYMENT_ORIGIN}/pay/; }
  location = /api/pay { proxy_pass ${PAYMENT_ORIGIN}/pay; }
}
