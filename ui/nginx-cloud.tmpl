server {
  listen 8080;
  server_name _;

  # Needed when proxying to HTTPS origins like *.onrender.com
  resolver 1.1.1.1 8.8.8.8 ipv6=off valid=300s;
  resolver_timeout 5s;
  proxy_ssl_server_name on;

  # Serve the SPA
  location / {
    root /usr/share/nginx/html;
    try_files $uri /index.html;
  }

  # Common proxy settings
  proxy_http_version 1.1;
  proxy_set_header Connection "";

  # PRODUCTS
  location /api/products/ {
    proxy_set_header Host $proxy_host;
    proxy_pass ${PRODUCT_ORIGIN}/products/;
  }
  location = /api/products {
    proxy_set_header Host $proxy_host;
    proxy_pass ${PRODUCT_ORIGIN}/products;
  }

  # AUTH / USER
  location /api/auth/ {
    proxy_set_header Host $proxy_host;
    proxy_pass ${USER_ORIGIN}/auth/;
  }
  location = /api/auth {
    proxy_set_header Host $proxy_host;
    proxy_pass ${USER_ORIGIN}/auth;
  }

  # ORDERS
  location /api/orders/ {
    proxy_set_header Host $proxy_host;
    proxy_pass ${ORDER_ORIGIN}/orders/;
  }
  location = /api/orders {
    proxy_set_header Host $proxy_host;
    proxy_pass ${ORDER_ORIGIN}/orders;
  }

  # PAYMENT
  location /api/pay/ {
    proxy_set_header Host $proxy_host;
    proxy_pass ${PAYMENT_ORIGIN}/pay/;
  }
  location = /api/pay {
    proxy_set_header Host $proxy_host;
    proxy_pass ${PAYMENT_ORIGIN}/pay;
  }
}
